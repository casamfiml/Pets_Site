<p id="notice"><%= notice %></p>
<div class="Box">
  <div class="col-lg-12 text-center">
    <h1 class="brand-name">Listing Posts</h1>
  </div>
</div>


<div class="row">
  <div class="box">
    <% @posts.each do |post| %>
        <div class="col-lg-12">
          <hr>
          <h2 class="intro-text text-center"><%= post.titulo %></h2>
          <hr>
          <% if post.has_photo? %>
              <%= image_tag(post.photo_path, :class => "img-responsive img-border img-left") %>
          <% end %>
    </div>
    <% end %>
  </div>
</div>
<br>
<div class="row">
  <div class="box">
    <div class="col-lg-12">
      <hr>
      <h2 class="intro-text text-center">Inicio de perros
        <strong>Aqui se presentan la mejor pagina para promocionar sus fotos de perros</strong>
        <%= link_to 'New Post', new_post_path %>
      </h2>
      <hr>
    </div>
  </div>
</div>
