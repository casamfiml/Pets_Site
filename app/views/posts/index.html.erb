<p id="notice"><%= notice %></p>
<div class="container">
<div class="box">
  <div class="col-lg-12 text-center">
    <h1 class="brand-name">Imagenes Subidas</h1>
  </div>
</div>
<div class="row">
  <div class="box">
    <div class="col-lg-12 text-center">
      <h2>
        <%= link_to 'New Post', new_post_path %>
      </h2>
    </div>
  </div>
</div>

<% @posts.each do |post| %>
<div class="row">
  <div class="box">
        <div class="col-lg-12">
          <hr>
          <h2 class="intro-text text-center"><%= post.titulo %></h2>
          <hr>
        </div>
        <div class="col-lg-12">  
          <% if post.has_photo? %>
              <%= image_tag(post.photo_path, :class => "img-responsive img-border img-left ") %>
          <% end %>
        </div>
    </div>
  </div>
</div>
<% end %>
<br>
<div class="row">
  <div class="box">
    <div class="col-lg-12">
      <hr>
      <h2 class="intro-text text-center">Portal de Mascotas
        <strong>Todas las fotos de mascotas</strong>
      </h2>
      <hr>
    </div>
  </div>
</div>
</div>
